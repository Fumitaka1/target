<div class="wrapper top">
  <div class="home-outer land">
    <div class="form-outer">
      <%= form_with model: @post, class: "basic_form" do |f| %>
        <h2>新規投稿</h2>

        <% if @post.errors.any? %>
          <div id="error_explanation">
            <% @post.errors.full_messages.each do |message| %>
            <p>・<%= message %></p>
            <% end %>
          </div>
        <% end %>

        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title %>

        <%= f.label :content, "内容" %>
        <%= f.text_area :content, class: "post_textarea" %>

        <%= f.file_field :image%>

        <%= f.submit "投稿", class: "button" %>
      <% end %>
    </div>
  </div>
</div>
